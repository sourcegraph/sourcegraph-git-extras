{
  "name": "git-extras",
  "publisher": "sourcegraph",
  "title": "Git extras",
  "description": "A Sourcegraph extension that adds useful features when viewing files in a Git repository on Sourcegraph, GitHub, GitLab, and other supported code hosts.",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "actions": [
      {
        "id": "git.blame.toggle",
        "command": "updateConfiguration",
        "commandArguments": [
          [
            "git.blame.lineDecorations"
          ],
          "${!config.git.blame.lineDecorations}",
          null,
          "json"
        ],
        "category": "Git",
        "title": "${config.git.blame.lineDecorations && \"Hide\" || \"Show\"} blame",
        "actionItem": {
          "label": "Blame",
          "description": "${config.git.blame.lineDecorations && \"Hide\" || \"Show\"} Git blame line annotations"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "action": "git.blame.toggle",
          "when": "resource && clientApplication.isSourcegraph"
        }
      ],
      "commandPalette": [
        {
          "action": "git.blame.toggle",
          "when": "resource"
        }
      ]
    },
    "configuration": {
      "title": "Git extras",
      "properties": {
        "git.blame.lineDecorations": {
          "description": "Whether to show Git blame annotations at the end of each line.",
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "version": "0.0.0-DEVELOPMENT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph-git-extras.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/sourcegraph-git-extras.js",
  "scripts": {
    "prettier-check": "npm run prettier -- --write=false",
    "prettier": "prettier '**/*.{js?(on),ts?(x),scss,yml,md}' --write --list-different",
    "tslint": "tslint -c tslint.json -p tsconfig.json './src/*.ts?(x)' './*.ts?(x)'",
    "typecheck": "tsc -p .",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register --require source-map-support/register --opts mocha.opts",
    "cover": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc --require ts-node/register --require source-map-support/register --all mocha --opts mocha.opts --timeout 10000",
    "build": "parcel build --no-minify --out-file sourcegraph-git-extras.js src/extension.ts",
    "symlink-package": "mkdirp dist && lnfs ./package.json ./dist/package.json",
    "serve": "npm run symlink-package && parcel serve --no-hmr --out-file sourcegraph-git-extras.js src/extension.ts",
    "sourcegraph:prepublish": "yarn typecheck && yarn test && yarn build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts?(x)"
    ],
    "exclude": [
      "**/*.test.ts?(x)",
      "src/util/stubs.ts"
    ],
    "extension": [
      ".tsx",
      ".ts"
    ]
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@sourcegraph/prettierrc": "^2.2.0",
    "@sourcegraph/tsconfig": "^4.0.0",
    "@sourcegraph/tslint-config": "^12.3.1",
    "@types/expect": "1.20.4",
    "@types/lodash": "4.14.121",
    "@types/mocha": "5.2.6",
    "@types/node": "10.12.18",
    "@types/sinon": "7.0.8",
    "expect": "^24.1.0",
    "husky": "^1.1.2",
    "lnfs-cli": "^2.1.0",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.14.2",
    "sinon": "^7.2.5",
    "source-map-support": "^0.5.9",
    "sourcegraph": "^22.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.3.3333",
    "vscode-languageserver-types": "^3.14.0"
  },
  "dependencies": {
    "date-fns": "^2.0.0-alpha.24",
    "rxjs": "^6.4.0",
    "tagged-template-noop": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
}
